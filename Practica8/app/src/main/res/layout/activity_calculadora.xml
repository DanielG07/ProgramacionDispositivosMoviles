<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#6A6A6A">

    <TextView
        android:id="@+id/tvCalculadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="#FEFEFE"
        android:ellipsize="start"
        android:maxLines="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <TableRow>

            <Button
                android:id="@+id/btnMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MC"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MR"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnMmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="M+"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnMmenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="M-"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MS"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="0,1,2,3">

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPorciento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="%"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnCE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="CE"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="C"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="@string/borrar"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnReciproco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="1/x"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnCuadrado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="X²"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnRaiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="x¹/²"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="/"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSiete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="7"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnOcho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="8"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnNueve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="9"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnMultiplicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="X"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCuatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="4"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnCinco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="5"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnSeis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="6"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnResta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="-"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnUno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnDos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnTres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="3"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FEFEFE" />

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSigno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="+/-"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnCero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="0"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="."
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:id="@+id/btnResultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="="
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

    </TableLayout>

</LinearLayout>