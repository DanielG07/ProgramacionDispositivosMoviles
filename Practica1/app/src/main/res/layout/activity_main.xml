<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6D1A42"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivIPN"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ipn_logo" />

            <TextView
                android:id="@+id/tvUPIITA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/ivUPIITA"
                android:layout_toEndOf="@+id/ivIPN"
                android:gravity="center"
                android:text="Unidad Profesional Interdisciplinaria en Ingenieria y Tecnologias Avanzadas"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivUPIITA"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/upiita_logo" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvAlumnoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Alumno:"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#13322b"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvAlumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Daniel González Jiménez"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:textColor="#5F5F5F"
            android:layout_below="@+id/tvAlumnoTitulo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvUnidadTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Unidad de Aprendizaje:"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#13322b"
            android:layout_below="@+id/tvAlumno"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvUnidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Programación de Dispositivos Móviles"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:textColor="#5F5F5F"
            android:layout_below="@+id/tvUnidadTitulo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvGrupoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Grupo:"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#13322b"
            android:layout_below="@+id/tvUnidad"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2TM13"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:textColor="#5F5F5F"
            android:layout_below="@+id/tvGrupoTitulo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvProfesorTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profesor:"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#13322b"
            android:layout_below="@+id/tvGrupo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvProfesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="José Alfredo Bermudez Sosa"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:textColor="#5F5F5F"
            android:layout_below="@+id/tvProfesorTitulo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvBoletaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Boleta:"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#13322b"
            android:layout_below="@+id/tvProfesor"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvBoleta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2019640295"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:textColor="#5F5F5F"
            android:layout_below="@+id/tvBoletaTitulo"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#333"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvIPN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSTITUTO POLITÉCNICO NACIONAL"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avenida Instituto Politécnico Nacional No. 2580, Col Barrio la Laguna Ticomán, Gustavo A. Madero, Ciudad de México, C.P. 07340. Teléfono: 57296000, extensión 56806"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/tvIPN"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>