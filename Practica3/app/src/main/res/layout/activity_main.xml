<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#6A6A6A">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="#FEFEFE"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <TableRow>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MC"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MR"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="M+"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="M-"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="MS"
                android:textAlignment="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="0,1,2,3"
        >

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="%"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="CE"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="C"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="<-"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="1/x"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="X&lt;sup&gt;3&lt;/sup&gt;"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="x^1/2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="/"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="7"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="8"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="9"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="X"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="4"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="5"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="6"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="---"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="1"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="3"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FEFEFE" />

        </TableRow>

        <TableRow
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="+/-"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="0"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="."
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="="
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FEFEFE"/>

        </TableRow>

    </TableLayout>

</LinearLayout>